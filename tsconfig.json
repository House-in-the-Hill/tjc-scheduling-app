{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "jsx": "react",
        "noEmit": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "typings/*": ["server/db/typings/*"],
            "shared/*": ["shared/*"],
            "*": ["node_modules/*"]
        }
    },
    "exclude": ["node_modules", ".vscode", ".expo"]
}
